# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Pages
GET     /                           controllers.LibraryController.index

GET     /books                      controllers.LibraryController.booksPage

GET     /instances                  controllers.LibraryController.instancesPage

GET     /addUsers                   controllers.LibraryController.addUserPage
GET     /workWithUser               controllers.LibraryController.workWithUserPage
GET     /userFines                  controllers.LibraryController.userFinesPage

GET     /addDeliveryPoint           controllers.LibraryController.addDeliveryPointPage
GET     /workWithDeliveryPoint      controllers.LibraryController.workWithDeliveryPointPage

GET     /transfers                  controllers.LibraryController.transfersPage

# Posts
POST    /addBooks                   controllers.LibraryController.addBook
POST    /addInstance                controllers.LibraryController.addInstance
POST    /addDeliveryPoint           controllers.LibraryController.addDeliveryPoint
POST    /addUser                    controllers.LibraryController.addUser
POST    /makeTransfer               controllers.LibraryController.makeTransfer
POST    /returnBook                 controllers.LibraryController.returnBook
POST    /lostBook                   controllers.LibraryController.lostBook
POST    /takeBook                   controllers.LibraryController.takeBook
POST    /takeBookFromTransfer       controllers.LibraryController.takeBookFromTransfer
POST    /resolveFine                controllers.LibraryController.resolveFine

# Selects
POST    /selectDeliveryPoint        controllers.LibraryController.selectDeliveryPoint
POST    /selectDeliveryPointSrc     controllers.LibraryController.selectDeliveryPointSrc
POST    /selectDeliveryPointDst     controllers.LibraryController.selectDeliveryPointDst
POST    /selectDeliveryPointType    controllers.LibraryController.selectDeliveryPointType
POST    /selectBook                 controllers.LibraryController.selectBook
POST    /selectUserCategory         controllers.LibraryController.selectUserCategory
POST    /selectUser                 controllers.LibraryController.selectUser
